<main class="contenedor contenedor-formularios">
    <h1><%- pageName %></h1>
    <form class="default-form" action="/nuevo-meeti" method="POST">
        <legend>Sobre el Meet</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="groupId">
                    <option value="" disabled selected>-- Selecciona Grupo --</option>
                    <% groups.forEach( group => {  %>
                        <option value="<%= group.id %>"><%= group.name %> </option>
                    <% }) %>  
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="title" placeholder="Titulo Meeti">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="guest" placeholder="Nombre Invitado o Ponente (si aplica)">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="date" placeholder="Fecha Meeti">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="time" placeholder="Hora Meeti">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="quota" placeholder="Cupo Meeti (opcional)">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <input type="text" id="formbuscador" placeholder="Ubicación">
        </div>
        <small>El asistente colocará una dirección estimada</small>
        <div class="campo contenedor-mapa">
            <div id="mapa"></div>
        </div>
        <p class="informacion">Mové el pin hacia el punto exacto en caso de ser necesario</p>
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="location" placeholder="Dirección">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="city" placeholder="Ciudad">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="state" placeholder="Estado">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="country" placeholder="País">
        </div>
        <div class="campo">
            <input type="hidden" id="lat" name="lat">
        </div>
        <div class="campo">
            <input type="hidden" id="lng" name="lng">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Meet">
        </div>
    </form>
</main>

