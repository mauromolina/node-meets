<div class="contenedor">
    <h1><%= pageName %> </h1>
    <div class="informacion-grupo">
        <div class="imagen-grupo">
            <% if (group.image) { %>
             <img src="/uploads/groups/<%= group.image %> " alt="">
            <% } else { %>
                <img src="/uploads/groups/noGroup.png" alt="">
            <% } %> 
        </div>
        <div class="texto">
            <%- group.description %>
            <% if (group.url) { %>
                <a href="<%= group.url %> " target="_blank" class="url">Visita nuestro sitio web!</a> 
            <% } %>
            <% if (meets.length > 0) { %>
             <h2>Pr√≥ximos eventos</h2>
             <ul class="lista-meetis">
                 <% meets.forEach(meet => { %>
                  <li>
                      <div class="texto">
                          <a href="/meet/<%= meet.slug %> ">
                            <h3><%= meet.title %> </h3>
                            <% moment.locale('es'); %> 
                            <% const date = meet.date + ' ' + meet.time %> 
                            <p class="fecha"><%= moment(date).format('LLLL') %>hs </p>
                        </a>
                      </div>
                  </li>
                 <% }) %>
             </ul>
            <% } %>
        </div>
    </div>
</div>